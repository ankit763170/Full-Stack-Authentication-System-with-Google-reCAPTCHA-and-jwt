<%- include('partials/header') %>

<div class="container">
  <h1>User Profile</h1>
  
  <div class="profile">
    <div class="profile-item">
      <strong>User ID:</strong> <%= user.id %>
    </div>
    <div class="profile-item">
      <strong>Username:</strong> <%= user.username %>
    </div>
    <div class="profile-item">
      <strong>Email:</strong> <%= user.email %>
    </div>
    <div class="profile-item">
      <strong>Account Created:</strong> <%= new Date(user.created_at).toLocaleString() %>
    </div>
  </div>
  
  <div style="margin-top: 20px;">
    <a href="/logout" style="text-decoration: none;">
      <button type="button">Logout</button>
    </a>
  </div>
</div>

<script>
  // Session expiry warning (optional feature)
  setTimeout(() => {
    alert('Your session will expire in 2 minutes. Please save your work.');
  }, 13 * 60 * 1000); // Show warning 2 minutes before expiry (at 13 minutes)
</script>

<%- include('partials/footer') %>